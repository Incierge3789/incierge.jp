---
interface Props {
  kind?: "automation" | "web-analytics";
}

const { kind = "automation" } = Astro.props as Props;

const isAutomation = kind === "automation";

const title = isAutomation
  ? "あなたの会社の業務を“構造化”し、ムダをゼロにする30分無料相談。"
  : "GA4やレポートを“読まなくていい状態”にするWeb解析 × AI伴走相談。";

const description = isAutomation
  ? "見積り作成・請求書処理・Slack確認など、「止めづらいけれど誰かの時間を奪っている作業」を洗い出し、どこから自動化すべきかをINCIERGEが一緒に整理します。"
  : "GA4の数字や広告レポートをもとに、「今どこを直せば売上に効くのか」を一緒に決めていきます。Web担当者がいなくても大丈夫です。";

const note = isAutomation
  ? "※ まだ具体的なツール名やAIの種類が決まっていなくても問題ありません。「この業務がしんどい」という状態からで十分です。"
  : "※ 現在使っているレポート資料や管理画面があれば、そのまま持ち込んでいただいて構いません。どこから見るべきかを一緒に整理します。";

const buttonHref = isAutomation ? "/automation/" : "/web-analytics/";
const buttonLabel = isAutomation
  ? "/automation の相談フォームへ"
  : "Web解析 × AI伴走の相談フォームへ";
---

<section class="mt-10 rounded-2xl border border-zinc-200 bg-zinc-50 px-5 py-6 text-sm text-zinc-800">
  <h2 class="mb-2 text-base font-semibold text-zinc-900">
    {isAutomation ? "自動化の相談をする" : "Web解析の相談をする"}
  </h2>
  <p class="mb-1 font-medium">
    {title}
  </p>
  <p class="mb-3 text-[13px] leading-relaxed">
    {description}
  </p>
  <p class="mb-4 text-[11px] leading-relaxed text-zinc-500">
    {note}
  </p>
  <a
    href={buttonHref}
    class="inline-flex items-center rounded-full bg-zinc-900 px-4 py-2 text-[13px] font-semibold text-white shadow-sm hover:bg-zinc-800"
  >
    {buttonLabel}
  </a>
</section>
