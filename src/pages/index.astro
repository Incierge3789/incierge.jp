---
import Base from "../layouts/Base.astro";

const title = "INCIERGE｜Information Concierge";
const description = "地方の「伝わらない」を、AIで変える。情報を整え、AIで外貨を稼ぐ。";
---

<Base title={title} description={description}>
  <section class="py-24 text-center">
    <h1 class="font-heading text-4xl md:text-6xl leading-tight">
      地方の「<span class="gold">伝わらない</span>」を、AIで変える。
    </h1>
    <p class="mt-6 text-lg opacity-80">
      情報を整え、AIで<strong>外貨を稼ぐ</strong>。
    </p>
    <div class="mt-10 flex gap-4 justify-center">
      <a
        href="https://chatgpt.com/g/g-6902e000b124819185e60fe5ecb67e74-incierge-aimakexiang-tan-konsierusiyu?utm_source=incierge.jp&utm_medium=hero&utm_campaign=ai_consult_gpts"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary"
      >
        AIマーケ相談（24時間 GPTs）
      </a>
      <a href="/services/" class="btn-ghost">
        サービスを見る
      </a>
    </div>
  </section>
</Base>
